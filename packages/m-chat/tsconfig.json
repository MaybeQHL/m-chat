{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": false,
        "jsx": "preserve",
        // "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "skipLibCheck": true,
        "noImplicitAny": false, // 是否在表达式和声明上有隐含的any类型时报错
        "types": [
            "vite/client",
        ],
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "build/**/*"
    ],
    "exclude": [
        "docs/**/*"
    ],
    "references": []
}